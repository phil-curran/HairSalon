@{
  Layout = "_Layout";
}

<h1 class="is-size-1 has-text-centered">Item Details:</h1>

<div class="block">
  <nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
      <li><a href="#">Home</a></li>
      <li><a href="/categories">Categories</a></li>
      <li><a href="/categories/{id}">@Model["category"].Name</a></li>
      <li class="is-active"><a href="#" aria-current="page">Item Details</a></li>
    </ul>
  </nav>
</div>

<div class="block">
  <h2>Category: @Model["category"].Name</h2>
  <h3>Description: @Model["item"].Description</h3>
</div>

<div class="block">
  <a class="button is-link is-outlined" href='/categories/@Model["category"].Id/items/new'>Add Item</a>
</div>

<p class="viewMap">Views / Items / Show</p>
