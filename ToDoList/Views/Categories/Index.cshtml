@using ToDoList.Models;

@{
  Layout = "_Layout";
}

<h1 class="is-size-1 has-text-centered">Categories</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
}

@foreach (Category category in Model)
{
  <a href='/categories/@category.Id'>@category.Name</a>
}

<a class="button is-link is-outlined" href='/categories/new'>Add a new category</a>

<p><a href='/'>Back home</a></p>

<p>Views / Categories / Index</p>