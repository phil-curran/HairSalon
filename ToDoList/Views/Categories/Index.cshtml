@using ToDoList.Models;

@{
  Layout = "_Layout";
}

<h1 class="is-size-1 has-text-centered">Categories</h1>

<div class="block">
  <nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
      <li><a href="/">Home</a></li>
      <li class="is-active"><a href="#" aria-current="page">Categories</a></li>
    </ul>
  </nav>
</div>

<div class="block">
  @if (@Model.Count == 0)
  {
    <h3>No categories have been added yet!</h3>
  }

  <ol>
    @foreach (Category category in Model)
    {
      <li><a href='/categories/@category.Id'>@category.Name</a></li>
    }
  </ol>
</div>

<div class="block">
  <a class="button is-link is-outlined" href='/categories/new'>Add a new category</a>
</div>

<p class="viewMap">Views / Categories / Index</p>